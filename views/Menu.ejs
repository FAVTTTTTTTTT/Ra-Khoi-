<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Thực Đơn | Seefood Restaurant</title>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700;900&family=Roboto:wght@400;500&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #e0f7fa 0%, #fffbe7 100%);
      font-family: 'Roboto', Arial, sans-serif;
      color: #222;
    }

    .navbar {
      background: linear-gradient(90deg, #0093e9 0%, #80d0c7 100%) !important;
      font-family: 'Montserrat', Arial, sans-serif;
    }

    .navbar-brand, .nav-link {
      color: #fff !important;
      font-weight: 700;
      text-transform: uppercase;
    }

    .section-title {
      color: #0093e9;
      font-family: 'Montserrat', Arial, sans-serif;
      font-weight: 900;
      margin-bottom: 32px;
      letter-spacing: 1px;
      font-size: 2.3rem;
      text-transform: uppercase;
      text-shadow: 1px 2px 8px #80d0c7a0;
    }

    .menu-item-card {
      border: none;
      border-radius: 18px;
      box-shadow: 0 2px 12px #0093e91a;
      overflow: hidden;
      transition: box-shadow 0.2s, transform 0.2s;
      background: #fff;
    }

    .menu-item-card:hover {
      box-shadow: 0 8px 32px #0093e933;
      transform: translateY(-6px) scale(1.02);
    }

    .menu-item-img {
      height: 180px;
      object-fit: cover;
      border-radius: 18px 18px 0 0;
      border-bottom: 4px solid #ffd700;
    }

    .menu-item-title {
      font-family: 'Montserrat', Arial, sans-serif;
      color: #0093e9;
      font-weight: 800;
      font-size: 1.15rem;
      margin-bottom: 6px;
    }

    .menu-item-price {
      color: #e4002b;
      font-weight: 900;
      font-size: 1.1rem;
      margin-top: 8px;
      font-family: 'Montserrat', Arial, sans-serif;
    }

    .footer {
      background: linear-gradient(90deg, #0093e9 0%, #80d0c7 100%);
      color: #fff;
      padding: 30px 0 10px 0;
      margin-top: 60px;
      border-radius: 24px 24px 0 0;
      font-family: 'Montserrat', Arial, sans-serif;
      font-weight: 700;
      font-size: 1.08rem;
      letter-spacing: 0.5px;
    }
  </style>
</head>

<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark px-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Seefood Restaurant</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" href="/">Trang chủ</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#menu-items">Thực đơn</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- ALACARTE MENU -->
  <div class="container mt-5">
    <h2 class="section-title text-center">ALACARTE MENU</h2>
    <div id="menu-items" class="row g-4">
      <!-- Các món ăn sẽ được sinh tự động ở đây -->
    </div>
  </div>

  <script>
    const menuData = [
      { img: "/images/rice.png", title: "CƠM / STEAMED RICE " },
      { img: "/images/rau.png", title: "RAU / VEGETABLES" },
      { img: "/images/canhchua.png", title: "CANH CHUA / SOUR SOUP" },
      { img: "/images/mi.png", title: "MÌ / YELLOW EGG NOODLE " },
      { img: "/images/chao-sup.png", title: "CHÁO - SÚP / RICE GRUEL - SOUP " },
      { img: "/images/goi.png", title: "GỎI / SALADS " },
      { img: "/images/squid.png", title: "Mực / Squid" },
      { img: "/images/beef-pig.png", title: "Bò-Heo / Beef-Pig" },
      { img: "/images/chicken.png", title: "Gà / Chicken" },
      { img: "/images/crabhand-carb.png", title: "Cua / Crab" },
      { img: "/images/dauhu-coivienmai.png", title: "Đậu hũ- Còi viên mai / Tofu - Scallop" },
      { img: "/images/doitrg.png", title: "Khô mực - Dồi trường / Dried Squid - Stuffed Intestine" },
      { img: "/images/echxao.png", title: "Ếch / Frog" },
      { img: "/images/greengrab.png", title: "Ghẹ - Tôm tích / Green Crab - Prawn lett" },
      { img: "/images/hao-trung.png", title: "Hào - Trứng  / Oysters - Eggs" },
      { img: "/images/hotpot.png", title: "Lẩu / Hotpot" },
      { img: "/images/lizard- bopfish.png", title: "Cá kèo - Cá bớp / Mudfish - Bop Fish" },
      { img: "/images/lobster.png", title: "Tôm hùm / Lobster" },
      { img: "/images/mu fish.png", title: "Cá mú / Mu Fish" },
      { img: "/images/ngheu-ocnhay.png", title: "Nghêu - Ốc nhảy / Clams - Jumping Snails" },
      { img: "/images/ocbuu.png", title: "Ốc bưu - Sò tô / Apple snails - Shellfish" },
      { img: "/images/ocgiac-ocmo.png", title: "Ốc giác - Ốc mỡ / Triangle snail - Fattening snail" },
      { img: "/images/sohuyet-soquat.png", title: "Sò huyết - Sò quạt / Blood scallop - Fan shaped scallop" },
      { img: "/images/solong-hotvitlon.png", title: "Sò lông - Hột vịt lộn / Hairy scallop - Half hacked duck egg" },
      { img: "/images/tiger pawn.png", title: "Tôm sú / Tiger Prawn" },
      { img: "/images/tom mu ni.png", title: "Tôm mũ ni / Mu Ni Prawn" },
      { img: "/images/drink.png", title: "Nước uống / Drinks" },
    ];

    const menuContainer = document.getElementById("menu-items");

    menuData.forEach(item => {
      const col = document.createElement("div");
      col.className = "col-lg-3 col-md-6";
      col.innerHTML = `
        <div class="card h-100 border-0 shadow-sm menu-item-card">
          <img src="${item.img}" class="card-img-top menu-item-img" alt="${item.title}">
          <div class="card-body text-center">
            <h5 class="fw-bold mb-2 menu-item-title">${item.title}</h5>
            <a href="tel:0901797969" class="btn btn-link text-danger fw-bold fs-5 text-decoration-none">
              LIÊN HỆ
            </a>
          </div>
        </div>
      `;
      menuContainer.appendChild(col);
    });
  </script>
</body>
</html>
